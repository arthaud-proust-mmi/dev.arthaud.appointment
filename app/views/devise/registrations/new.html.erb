<div class="row">
    <div class="d-none d-lg-block col-lg-5 offset-xl-1 coll-xl-5">
        <%= image_tag "login-2.jpg", alt:"rss feed", class:"img-fluid rounded" %>
        <a class="d-block w-100 text-end text-muted text-decoration-none mt-1" href="https://unsplash.com/@anniespratt?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Photo par Annie Spratt</a>
    </div>
    <div class="pb-5 offset-1 col-10 offset-sm-2 col-sm-8 offset-md-3 col-md-6 col-lg-5 offset-lg-1 col-xl-4 d-flex flex-column justify-content-center">
        <h1 class="font-serif pb-2">S'inscrire sur Coeo</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="mb-3 col-12">
                <%= f.label :name, 'Nom', class:'form-label' %>
                <%= f.text_field :name, autofocus: true, class: 'form-control' %>
            </div>
            
            <div class="mb-3 col-12">
                <%= f.label :email, 'E-mail', class:'form-label' %>
                <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="mb-3 col-12">
                <div class="d-flex flex-row justify-content-between">
                    <%= f.label :password, 'Mot de passe', class:'form-label' %>
                    <% if @minimum_password_length %>
                        <em><%= @minimum_password_length %> charactères minimum</em>
                    <% end %>
                </div>
                <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
            </div>


            <div class="mb-3 col-12">
                <%= f.label :password_confirmation, 'Confirmer le mot de passe', class:'form-label' %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
            </div>
            

            <div class="pt-2 actions">
                <%= f.submit "Créer un compte", class:'mb-2 col-12 btn btn-primary' %>

                <%- if controller_name != 'sessions' %>
                    <%= link_to "Se connecter", new_session_path(resource_name), class:'btn col-12' %>
                <% end %>
            </div>

        <% end %>
    </div>
</div>