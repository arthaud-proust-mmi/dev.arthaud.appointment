<%= render layout: '/layouts/form', 
    locals: {
        title: 'S\'inscrire sur '+ENV['app_name'],
        img: {
            path: 'login-2.jpg',
            author: 'Annie Spratt',
            authorUrl: 'https://unsplash.com/@anniespratt'
        }
} do %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="mb-3 col-12">
            <%= f.label :name, 'Nom', class:'form-label' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="mb-3 col-12">
            <%= f.label :email, 'E-mail', class:'form-label' %>
            <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="mb-3 col-12">
            <div class="d-flex flex-row justify-content-between">
                <%= f.label :password, 'Mot de passe', class:'form-label' %>
                <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> caractères minimum</em>
                <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
        </div>


        <div class="mb-3 col-12">
            <%= f.label :password_confirmation, 'Confirmer le mot de passe', class:'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
        </div>

        <div class="mb-3 form-check">
            <%= f.check_box :is_pro, class:"form-check-input"%>
            <%= f.label :is_pro, "Je suis un professionnel", class:"form-check-label"  %>
        </div>
        

        <div class="pt-2 actions">
            <%= f.submit "Créer un compte", class:'mb-2 col-12 btn btn-primary' %>

            <%- if controller_name != 'sessions' %>
                <%= link_to "Se connecter", new_session_path(resource_name), class:'btn col-12' %>
            <% end %>
        </div>

    <% end %>
<% end %>