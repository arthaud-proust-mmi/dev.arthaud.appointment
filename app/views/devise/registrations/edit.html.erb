<%= render layout: '/layouts/auth', 
    locals: {
        title: 'Modifier mon profil'
} do %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3 col-12">
            <%= f.label :name, 'Nom', class:'form-label' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="mb-3 col-12">
            <%= f.label :email, 'E-mail', class:'form-label' %>
            <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Email en attente de confirmation pour: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3 col-12">
            <div class="d-flex flex-row justify-content-between">
                <%= f.label :password, 'Mot de passe', class:'form-label' %>
                <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> caractères minimum</em>
                <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
            <span class="text-muted">Laissez vide si vous ne voulez pas le changer</span>
        </div>

        <div class="mb-3 col-12">
            <%= f.label :password_confirmation, 'Confirmer le mot de passe', class:'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
        </div>

        <div class="mb-3 col-12">
            <%= f.label :current_password, 'Mot de passe actuel', class:'form-label' %>
            <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control' %>
            <span class="text-muted">Nécessaire pour changer de mot de passe</span>
        </div>

        <div class="actions">
            <%= f.submit "Mettre à jour", class:'mb-2 col-12 btn btn-primary' %>
            <%= link_to "Retour", home_path, class:'btn col-12' %>
        </div>
    <% end %>

    <!-- <h3 class="mt-5">Zone dangereuse</h3> -->
    <!-- <%= button_to "Supprimer mon compte", registration_path(resource_name), class:'btn btn-danger', data: { confirm: "Êtes-vous sûr?" }, method: :delete %>-->
<% end %>