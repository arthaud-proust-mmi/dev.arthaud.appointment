<div class="col-sm-6 col-lg-4  pb-4">
    <div class="card" id="<%= dom_id service %>">
        <div class="card-body">
            <h5 class="card-title">
                <%= service.title %>
            </h5>
            <% if not defined? personal %>
            <h6 class="card-subtitle mb-2 text-muted">
                Par <%= service.user.name %>
            </h6>
            <% end %>
            <p class="card-text">
                <%= service.description %>
            </p>
            <p class="card-text">
                <%= service.price %>€
                <small class="text-muted">
                    /<%= service.unit %>
                </small>
            </p>
            <% if not defined? no_action %>
                <% if defined? personal %>
                    <%= link_to "Éditer", edit_service_path(service), class:'btn btn-primary' %>
                    <!-- <%= link_to "Voir", service, class:'btn btn-primary' %> -->
                <% else %>
                    <!-- <%= link_to "Voir", customer_service_path(service), class:'btn btn-primary' %> -->
                    <%= link_to "Prendre rendez-vous", customer_book_service_path(service), class:'btn btn-primary' %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>