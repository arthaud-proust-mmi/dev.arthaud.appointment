<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <%= service.title %>
        </h5>
        <p class="card-text">
            <%= service.description %>
        </p>
        <h6 class="card-text">
            <%= service.price %>€
            <small class="text-muted">
                /<%= service.unit %>
            </small>
        </h6>

        <% if (defined? actions) && actions  %>
            <% if current_user && current_user.id == @service.user.id %>
                <%= link_to "Éditer", edit_service_path(service), class:'btn btn-primary' %>
            <% else %>
                <%= link_to "Prendre rendez-vous", customer_book_service_path(service), class:'btn btn-primary' %>
            <% end %>
        <% end %>
    </div>

    
</div>