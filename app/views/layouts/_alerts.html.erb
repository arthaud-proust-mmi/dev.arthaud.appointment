<div class="row">
    <% if notice %>
        <div class="w-auto alert alert-success mx-auto mb-3" role="alert">
            <%= notice %>
        </div>
    <% end %>
    <% if alert %>
        <div class="w-auto alert alert-danger mx-auto mb-3" role="alert">
            <%= alert %>
        </div>
    <% end %>
</div>